# See https://atom.io/docs/latest/hacking-atom-package-word-count#menus for more details
'context-menu':
  'atom-pane[data-active-item-name$=\\.jscad] atom-text-editor': [
    {
      'label': 'Preview JSCAD'
      'command': 'atom-scad-preview:toggle'
    }
  ]
  'atom-pane[data-active-item-name$=\\.scad] atom-text-editor': [
    {
      'label': 'Preview SCAD'
      'command': 'atom-scad-preview:toggle'
    }
  ]
  '.tree-view .file .name[data-name$=\\.jscad]': [
    {
      'label': 'Preview JSCAD'
      'command':  'atom-scad-preview:toggle'
    }
  ]
  '.tree-view .file .name[data-name$=\\.scad]': [
    {
      'label': 'Preview SCAD'
      'command':  'atom-scad-preview:toggle'
    }
  ]
'menu': [
  {
    'label': 'Packages'
    'submenu': [
      'label': 'atom-scad-preview'
      'submenu': [
        {
          'label': 'Toggle'
          'command': 'atom-scad-preview:toggle'
        }
      ]
    ]
  }
]
